-- Create GUI
local screenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
screenGui.Name = "PetTestGUI"

-- Main Frame
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 200)
frame.Position = UDim2.new(0.05, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0

-- UI Corner
local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 12)

-- Pet Dropdown
local dropdown = Instance.new("TextButton", frame)
dropdown.Size = UDim2.new(0.9, 0, 0, 30)
dropdown.Position = UDim2.new(0.05, 0, 0.1, 0)
dropdown.Text = "Select Pet"
dropdown.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Spawn Button
local spawnBtn = Instance.new("TextButton", frame)
spawnBtn.Size = UDim2.new(0.9, 0, 0, 30)
spawnBtn.Position = UDim2.new(0.05, 0, 0.3, 0)
spawnBtn.Text = "Spawn Pet"
spawnBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
spawnBtn.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Label for count
local countLabel = Instance.new("TextLabel", frame)
countLabel.Size = UDim2.new(0.9, 0, 0, 25)
countLabel.Position = UDim2.new(0.05, 0, 0.5, 0)
countLabel.BackgroundTransparency = 1
countLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
countLabel.Text = "Pets spawned: 0"

-- Tracking state
local petCount = 0
local selectedPet = "Dog" -- default
local availablePets = {"Dog", "Cat", "Dragon"} -- example pet types

-- Dropdown logic
dropdown.MouseButton1Click:Connect(function()
	print("Available Pets:")
	for _, pet in ipairs(availablePets) do
		print("- " .. pet)
	end
	selectedPet = availablePets[math.random(1, #availablePets)]
	dropdown.Text = "Pet: " .. selectedPet
end)

-- Spawn logic
spawnBtn.MouseButton1Click:Connect(function()
	local character = game.Players.LocalPlayer.Character
	if not character then return end

	local pet = Instance.new("Part")
	pet.Size = Vector3.new(2, 2, 2)
	pet.Position = character.HumanoidRootPart.Position + Vector3.new(math.random(2,5), 0, math.random(2,5))
	pet.BrickColor = BrickColor.Random()
	pet.Name = selectedPet
	pet.Anchored = true
	pet.Parent = workspace

	petCount += 1
	countLabel.Text = "Pets spawned: " .. petCount
end)
