local RS = game:GetService("ReplicatedStorage")
local player = game.Players.LocalPlayer

-- Wait for character
local char = player.Character or player.CharacterAdded:Wait()

-- Folder containing pet models
local petFolder = RS:WaitForChild("Pets")

-- Function to replace the pet
local function replacePet(newPetName)
	local oldPet = workspace:FindFirstChild("MyPet")
	if not oldPet then
		warn("❌ No current pet named 'MyPet' in Workspace!")
		return
	end

	local oldCFrame = oldPet:GetPrimaryPartCFrame()
	oldPet:Destroy()

	local newPet = petFolder:FindFirstChild(newPetName)
	if not newPet then
		warn("❌ Pet model '" .. newPetName .. "' not found in ReplicatedStorage.Pets!")
		return
	end

	local clone = newPet:Clone()
	clone.Name = "MyPet"
	clone:SetPrimaryPartCFrame(oldCFrame)
	clone.Parent = workspace

	print("✅ Replaced with pet:", newPetName)
end

-- Auto-run example
task.wait(3) -- Wait a bit after loading
replacePet("BatDragon")
